/* Header Style */
header[role="banner"] #logo-main {
    display: block;
    margin: 20px auto;
}

/* Type Styles */
.indent {
    text-indent: 50px;
}

/* Footer Style */
#footer{
    background-color: #505050;
    border:1px solid rgba(0,0,0,0.4);
    border-radius:0.3em;
    height: 60px;
    margin-top: 20px;
    padding-top: 20px;
    padding-bottom: 20px;
}
#footer > div > p {
    text-align: center;
}

body > div:nth-child(3) > div.alert.alert-success{
    text-align: center;
}
body {
    font-family: 'Droid Sans', sans-serif;
    color:#d9d9d9;
    font-size:15px;
    background: url(../img/background.png) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}


/* Navbar Style */
.navbar-dark {
    background-color: rgba(51,19,9,0.8) ;
    border: 1px solid #ab380b;
    font-size: 17px;
    justify-content: center;
    border-radius:0.3em;
}
.navbar-dark .navbar-nav {
    width: 50%;
    text-align: center;
}
.navbar-dark .navbar-brand  {
    color: #d9d9d9;
    position: center;
}
.navbar-dark .navbar-brand:hover, .navbar-dark .navbar-brand:focus {
    color: #000000;
}
.navbar-dark .navbar-text {
    color: #d9d9d9;
}
.navbar-dark .navbar-nav > li {
    display: inline-block;
    float: none;
}
.navbar-dark .navbar-nav > li > a {
    color: #d9d9d9;
    padding-left: 30px;
    padding-right: 30px;
}
.navbar-dark .navbar-nav > li > a:hover, .navbar-dark .navbar-nav > li > a:focus  {
    color: #FFFFFF;
}

.navbar-dark .navbar-nav > li > .dropdown-menu {
    background-color: #454545;
}
.navbar-dark .navbar-nav > li > .dropdown-menu > li > a {
    color: #d9d9d9;
}
.navbar-dark .navbar-nav > li > .dropdown-menu > li > a:hover,
.navbar-dark .navbar-nav > li > .dropdown-menu > li > a:focus {
    color: #000000;
    background-color: #ab380b;
}
.navbar-dark .navbar-nav > li > .dropdown-menu > li > .divider {
    background-color: #454545;
}
.navbar-dark .navbar-nav > .active > a, .navbar-dark .navbar-nav > .active > a:hover, .navbar-dark .navbar-nav > .active > a:focus {
    color: #000000;
    background-color: #ab380b;
}
.navbar-dark .navbar-nav > .open > a, .navbar-dark .navbar-nav > .open > a:hover, .navbar-dark .navbar-nav > .open > a:focus {
    color: #000000;
    background-color: #ab380b;
}
.navbar-dark .navbar-toggle {
    border-color: #ab380b;
}
.navbar-dark .navbar-toggle:hover, .navbar-dark .navbar-toggle:focus {
    background-color: #ab380b;
}
.navbar-dark .navbar-toggle .icon-bar {
    background-color: #d9d9d9;
}
.navbar-dark .navbar-collapse,
.navbar-dark .navbar-form {
    border-color: #d9d9d9;
}
.navbar-dark .navbar-link {
    color: #d9d9d9;
}
.navbar-dark .navbar-link:hover {
    color: #000000;
}
.navbar .container-fluid, .navbar-collapse {
    padding-left:0;
}
.navbar-collapse.in {
    padding-left:30px;
}
.navbar .ul {
    font-family: 'Droid Sans', sans-serif;
}

@media (max-width: 767px) {
    .navbar-dark .navbar-nav .open .dropdown-menu > li > a {
        color: #d9d9d9;
    }
    .navbar-dark .navbar-nav .open .dropdown-menu > li > a:hover, .navbar-dark .navbar-nav .open .dropdown-menu > li > a:focus {
        color: #000000;
    }
    .navbar-dark .navbar-nav .open .dropdown-menu > .active > a, .navbar-dark .navbar-nav .open .dropdown-menu > .active > a:hover, .navbar-dark .navbar-nav .open .dropdown-menu > .active > a:focus {
        color: #000000;
        background-color: #ab380b;
    }
}

/*Page Title Format */
.pagetitle {
    font-size:40px;
    text-shadow:0 1px 0 black;
    text-align:center;
    padding:15px 15px;
    margin-bottom:20px;
    border-bottom:3px outset rgba(255,255,255,1);
    position:relative;
    text-align:center;
}

/* Container Styles */
.well {
    background-color: rgba(51,19,9,0.8) ;
    border-color: #ab380b;
    padding:15px 15px;
    margin-top:20px;
}

/* Footer Styles */
#footer {
    background-color: rgba(51, 19, 9, 1);
    border-color: #ab380b;
}

/* Form for whitelist.php */
.loginform {
    background: url(../img/door1.png) no-repeat center;
    background-size: 75%;
    border-radius:0.4em;
    overflow:hidden;
    position:relative;
    display: inline-block;
    margin-top: 20px;
}

.formtitle {
    font-size:22px;
    text-shadow:0 1px 0 black;
    text-align:center;
    padding:15px 0;
    border-bottom:1px solid rgba(0,0,0,1);
    position:relative;
}

.formlabel{
    color:#FFF;
    display:block;
    padding-bottom:9px;
}

.forminput{
  width:80%;
  padding:8px 5px;
  background:rgba(200,155,167,0.5);
  border:1px solid #222;
  border-radius:0.3em;
  margin-bottom:12px;}

.forminput:hover{
    background:rgba(138,33,51,0.5);
}

.formbutton{
    padding:10px 30px;
    border:1px solid rgba(0,0,0,0.4);
    text-shadow:0 -1px 0 rgba(0,0,0,0.4);
    box-shadow:
            inset 0 1px 0 rgba(255,255,255,0.3),
            inset 0 10px 10px rgba(255,255,255,0.1);
    border-radius:0.3em;
    background:rgba(201,49,77,1);
    color:white;
    font-weight:bold;
    cursor:pointer;
    font-size:15px;
}


/* Forms for command.php and mail.php */
/* Command Form Style specific to whitelist/command.php */
.cmdlegend {
    border-style: none;
    border-width: 0;
    font-size: 20px;
    line-height: 20px;
    margin-bottom: 0;
    color: #d9d9d9 ;
}
.cmdfield {
    border: 2px groove threedface #444;
    -webkit-box-shadow:  0px 0px 0px 0px #000;
    box-shadow:  0px 0px 0px 0px #000;
}

body > div:nth-child(3) > div:nth-child(2) > div.col-md-8 > fieldset > form > center > input[type="text"],
body > div > div.row > div > fieldset > form > input[type="text"]:nth-child(1),
