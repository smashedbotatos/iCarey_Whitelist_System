/* Tracking Popup */
#TrackingWindow {
width:100%;
height:100%;
opacity:.95;
top:0;
left:0;
display:none;
position:absolute;
background-color:#272727;
overflow:auto;
z-index:2;
}

div#popupTrack {
position:absolute;
left:50%;
top:17%;
margin-left:-202px;
font-family:'Ubuntu',sans-serif;
z-index:2;
}

#track-close{
  position:relative;
  color: #FF652F;
  background-color: #272727;
  margin-right: -30px;
  margin-top:-60px;
  z-index:2;
}
/* End Tracking Popup */

